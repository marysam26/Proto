@model WriteItUp2.Areas.SystemAdmin.Models.AssignmentView

@{
    ViewBag.Title = "Generate New Assigment";
}

<body style="
        background-image: url(/Images/grey.jpg);
        background-repeat: no-repeat;
        background-size: cover">
</body>
<div class="content-wrapper">
    @using (Html.BeginForm("AddAssignment", "SystemAdminHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-horizontal">
            <h4>Generate a New Assignment</h4>
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.AssignmentName, "Title of Assignment", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.AssignmentName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AssignmentName)
                </div>
            </div>
          
            <div class="form-group">
                @Html.LabelFor(model => model.Description, "Description of Assignment", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description)
                    
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Link, "Link to Stratagy Video", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Link)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Generate Assignment" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
