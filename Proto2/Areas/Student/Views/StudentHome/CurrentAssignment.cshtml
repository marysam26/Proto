                    <table class="table">
                        <thead>
                        </thead>
                        <tbody>
                            <tr>
                                <td><p><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Train", "StudentHome", new {Id = Model.Id})' ;return false; ">Watch Strategy Video</button></p></td>

                                <td><p><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Brainstorm", "StudentHome", new {Id = Model.Id})' ;return false; ">Brainstorm</button></p></td>

                                <td><p><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Write", "StudentHome", new {Id = Model.Id})' ;return false; ">Write</button></p></td>
