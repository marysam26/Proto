@model WriteItUp2.Areas.Teacher.Models.AssignmentInputView
<!DOCTYPE html>

@{
    ViewBag.Title = "Brainstorm";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body style="
        background-image: url(/Images/letters2.50.JPG);
        background-repeat: no-repeat;
        background-size: cover">
    <center><h2>@Model.AssignmentName</h2></center>
    <p></p>
    <div class="content-wrapper">
        <div class="pull-right">
            <p></p>
            <div class="content-wrapper" style="align-content:center; background-color: whitesmoke; padding-right:30px; padding-left:30px; padding-bottom:35px; padding-top:50px ;opacity: 0.90; border-radius: 7px;">

                <a onclick="location.href='@Url.Action("Train", "StudentHome", new {Id = Model.Id})' ;return false; ">Watch strategy video</a><p></p>
                <a onclick="location.href='@Url.Action("Write", "StudentHome", new {Id = Model.Id})' ;return false; ">Writing</a><p></p>
                <a onclick="location.href='@Url.Action("ViewAssignments", "StudentHome", new {classID = Model.CourseId})' ;return false; ">Course home</a><p></p>
            </div>
        </div>
    </div>
    <div style="text-align:center">
        <br>
        <asp:label runat="server">
            <iframe width="900" height="625" src="http://mudcu.be/sketchpad/" frameborder="0"></iframe>
            <br>
        </asp:label>
    </div>
</body>
</html>
