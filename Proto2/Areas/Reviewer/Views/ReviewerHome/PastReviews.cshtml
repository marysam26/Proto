@model List<Proto2.Areas.Reviewer.Models.PastReviewView>

@*This view should look like the bottom screen on the left 
for the reviewer mockups. Look at the Index view for 
teachers for an example*@

@{
    ViewBag.Title = "Past Reviews";
}

@*<h2>Past Reviews</h2>*@
<body style="
        background-image: url(http://encs.vancouver.wsu.edu/~k.gonzalez/letters2.50.JPG);
        background-repeat: no-repeat;
        background-size: cover">

    @if (!Model.Any())
    {
        <div class="jumbotron" style="opacity: .90">
            <h2>No Reviews made by this Reviewer </h2>
        </div>

    }
    @if (Model.Any())
    {
        <h2>@ViewBag.Title</h2>
        <div class="jumbotron" style="opacity: .90">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Story</th>
                        <th>Title</th>
                        <th>Character Score</th>
                        <th>Plot Score</th>
                        <th>Setting Score</th>
                        <th>Comment</th>
                        <th>Story</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reviewer in Model)
                    {
                        <tr>
                            <td>@User.Identity.Name</td>
                            <td>@reviewer.Story</td>
                            <td>@reviewer.Title</td>
                            <td>@reviewer.ScoreCharacter</td>
                            <td>@reviewer.ScorePlot</td>
                            <td>@reviewer.ScoreSetting</td>
                            <td>@reviewer.Comment</td>
                            <td>@reviewer.Story</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    }
</body>
