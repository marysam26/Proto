@model WriteItUp2.Areas.Reviewer.Models.RegisterTeacher
@{
    ViewBag.Title = "Welcome Teacher";
}

<body style="
        background-image: url(/Images/letters2.50.JPG);
        background-repeat: no-repeat;
        background-size: cover">

</body>

<div class="content-wrapper">

        <div class="jumbotron">
            <h2><strong>Please Register as a Teacher to access the teacher page</strong> </h2>
            <p>Once you've registered, this tab will automatically take you to your Teacher page.</p>
            <p>
                @using (Html.BeginForm("RegisterAsTeacher", "ReviewerHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-horizontal">
                       
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(model => model.TeacherCode, "Teacher Code", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.TeacherCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TeacherCode)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Register As Teacher" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }            </p>
        </div>
        
</div>