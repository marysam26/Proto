@model Proto.Areas.SystemAdmin.Models.AddVideoInput

@{
    ViewBag.Title = "Add Reviewer Video";
}


<div class="content-wrapper">
    @using (Html.BeginForm("AddReviewerVideo", "SystemAdminHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-horizontal">
            <h4>Add a Reviewer video</h4>
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, "Title", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Link, "Link", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Link)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Add Video" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>