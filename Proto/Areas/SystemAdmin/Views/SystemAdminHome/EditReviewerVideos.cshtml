@model List<WriteItUp.Areas.SystemAdmin.Models.VideoView>

@{
    ViewBag.Title = "Videos for Reviewers";
}

<body style="
        background-image: url(http://encs.vancouver.wsu.edu/~k.gonzalez/letters2.50.JPG);
        background-repeat: no-repeat;
        background-size: cover">
</body>
<div class="content-wrapper">

    @if (!Model.Any())
    {
        <div class="jumbotron">
            <h2><strong>Please Add a Video</strong> </h2>
            <p>Reviewers will be able to view videos as training exerciese.</p>
            <p>
                <button type="button" class="btn btn-success" onclick=" location.href = '@Url.Action("AddReviewerVideo", "SystemAdminHome")' ;return false; "><i class=" glyphicon glyphicon-plus"></i>&nbsp;Add Video</button>
            </p>
        </div>

    }
    @if (Model.Any())
    {

        <div>
            <div class="pull-right">
                <button type="button" class="btn btn-success pull-right" onclick=" location.href = '@Url.Action("AddReviewerVideo", "SystemAdminHome")';return false;"><i class="glyphicon glyphicon-plus"></i>&nbsp;Add Video</button>
            </div>
            <h2>@ViewBag.Title</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Link</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var video in Model)
                    {
                        <tr>
                            <td><strong>@video.Title</strong></td>
                            <td>@video.Link</td>
                            <td><a style="color:red">Delete</a></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>


    }
</div>