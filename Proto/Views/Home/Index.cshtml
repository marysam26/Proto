@{
    ViewBag.Title = "Home Page";
}
<div class="content-wrapper">

    @if (!Request.IsAuthenticated)
    {
        <div class="jumbotron">
            <h2><strong>Welcome to Proto</strong> </h2>
            <p>
                Here at proto, we're inviting <strong>Teachers</strong>, <strong>Students</strong>, and <strong>Reviewers</strong>
                to use our website to encourage better reading writing skills.
            </p>
            <p>
                <button type="button" class="btn btn-success" onclick=" location.href='@Url.Action("Register", "Account")' ;return false; "><i class=" glyphicon glyphicon-plus"></i>&nbsp;Join Proto</button>
            </p>
        </div>

    }
@if (Request.IsAuthenticated)
{
    <div class="jumbotron">
        <h2><strong>Thanks for Joining Proto!</strong> </h2>
        <p>
            <button type="button" class="btn btn-success" onclick=" location.href = '@Url.Action("About", "Home")';return false; "><i class=" glyphicon glyphicon-plus"></i>&nbsp;Learn About Proto</button>
            <button type="button" class="btn btn-success" onclick=" location.href = '@Url.Action("Contact", "Home")';return false; "><i class=" glyphicon glyphicon-plus"></i>&nbsp;Contact Us</button>

        </p>

    </div>
}
</div>